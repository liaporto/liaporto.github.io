<section class="resume-section" id="{{locale.topics[4].name | slug}}">
    <div class="resume-section-content">
        <h2 class="mb-5">{{locale.topics[4].name}}</h2>
        <div class="container container-fluid card-container mx-auto row justify-content-center">
            {% for project in locale.projects %}
                <a class="card link-card--project mb-5 col-md-6 mx-2 col-lg-4 my-lg-0 mx-lg-2" data-toggle="modal" data-target="#{{project.id}}-modal" href="">
                    <div class="card-content-wrapper">
                        <img class="card-img" src="{{site.img_path}}{{project.img}}">
                        <div class="card-img-overlay">
                            <h3 class="card-title card-front-title text-center">{{project.name}}</h3>
                            <p class="card-text">{{project.short_description}}</p>
                        </div>
                    </div>
                </a>
                {%include 'partials/project_modal.njk'%}
            {% endfor %}
        </div>
    </div>
</section>